{% extends '::base.html.twig' %}

{% block body -%}
	<div class="main">
        <div class="main__scroll scrollbar-macosx">
            <div class="main__cont">
                <div class="main-heading">
                    <ol class="breadcrumb">
                    	<li><a href="{{ path('usuario') }}">Usuarios</a></li>
                        <li class="active">Editar Usuario</li>
                    </ol>
                </div>

                <div class="container-fluid half-padding">
                	<div class="template template__controls">
                		<div class="row">
                			<div class="panel panel-danger">
                				<div class="panel-heading">
                          			<h3 class="panel-title">Usuarios</h3>
                        		</div>
                        		<div class="panel-body">
                          			<div class="form-horizontal">
                          				{{ form_start(edit_form) }}
	                            			<div class="form-group">
	                              				<label class="col-sm-2 control-label">Nombre</label>
	                              				<div class="col-sm-4">
	                              					{{ form_widget(edit_form.nombre,{'attr': {'class':'form-control'},'required':'true'}) }}
	                              				</div>
	                            			</div>
	                            			<div class="form-group">
	                              				<label class="col-sm-2 control-label">Apellido paterno</label>
	                              				<div class="col-sm-4">
	                              					{{ form_widget(edit_form.apePat,{'attr': {'class':'form-control'},'required':'true'}) }}
	                              				</div>
	                            			</div>
	                            			<div class="form-group">
	                              				<label class="col-sm-2 control-label">Nombre de usuario</label>
	                              				<div class="col-sm-4">
	                              					{{ form_widget(edit_form.userName,{'attr': {'class':'form-control'},'required':'true'}) }}
	                              				</div>
	                            			</div>
	                            			<div class="form-group">
	                              				<label class="col-sm-2 control-label">Contraseña</label>
	                              				<div class="col-sm-4">
	                              					{{ form_widget(edit_form.password.first,{'attr': {'class':'form-control'}}) }}
	                              				</div>
	                            			</div>
	                            			<div class="form-group">
	                              				<label class="col-sm-2 control-label">Repita contraseña</label>
	                              				<div class="col-sm-4">
	                              					{{ form_widget(edit_form.password.second,{'attr': {'class':'form-control'}}) }}
	                              				</div>
	                            			</div>
	                            			<div class="form-group">
	                              				<label class="col-sm-2 control-label">Rol</label>
	                              				<div class="col-sm-4">
	                              					{{ form_widget(edit_form.rol,{'attr': {'class':'form-control'},'required':'true'}) }}
	                              				</div>
	                            			</div>
                            			{{ form_widget(edit_form._token) }}
                            				<div class="form-group">
	                              				<div class="col-sm-8 col-sm-offset-3">
	                              					<button class="btn btn-info" type="submit">Editar</button>
	                              				</div>
	                            			</div>
    								</div>
    							</div>	
    						</div>
    					</div>
    				</div>
    			</div>


            </div>
        </div>
    </div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('usuario') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}

