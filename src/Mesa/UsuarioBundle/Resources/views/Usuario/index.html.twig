{% extends '::base.html.twig' %}

{% block css %}
    <link href="{{ asset ('bundles/clientes/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
{% endblock css%}

{% block body -%}

    <div class="main">
        <div class="main__scroll scrollbar-macosx">
            <div class="main__cont">
                <div class="main-heading">
                    <ol class="breadcrumb">
                        <li class="active"><h1>Usuarios </h1></li>
                    </ol>
                </div>
              
                <div class="container-fluid half-padding">
                    <div class="template template__table_data">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-danger">
                                    <div class="panel-heading">
                                        <h3 class="panel-title">Usuarios</h3>
                                    </div>
                                    <div class="panel-body">
                                        <div class="col-sm-offset-10 col-md-offset-10">
                                            <a href="{{ path('usuario_new') }}" class="btn btn-success">
                                                Nuevo
                                            </a>
                                            <br />
                                        </div>
                                        <div class="container-fluid half-padding">
                                            <div id="buttons"></div>
                                            <table id="example" class="table datatable display table-hover" cellspacing="0" width="100%">
                                                <thead>
                                                    <tr>
                                                        <th>Nombre</th>
                                                        <th>Apellido</th>
                                                        <th>Usuario</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>    
                                                <tbody>
                                                    {% for entity in entities %}
                                                        <tr>
                                                            <td><a href="{{ path('usuario_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                                                            <td>{{ entity.apePat }}</td>
                                                            <td>{{ entity.userName }}</td>
                                                            <td>
                                                                <a href="{{ path('usuario_show', { 'id': entity.id }) }}" class="btn btn-warning">Ver</a>
                                                                
                                                                <a href="{{ path('usuario_edit', { 'id': entity.id }) }}" class="btn btn-info">Editar</a>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Nombre</th>
                                                        <th>Apellido</th>
                                                        <th>Usuario</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                    </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
        
{% endblock %}

{% block javascript %}
    <script src="{{ asset ('bundles/clientes/css/datatables/media/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset ('bundles/clientes/css/datatables/media/js/dataTables.bootstrap.js') }}"></script>
    <script src="{{ asset ('bundles/clientes/js/template/table_data.js') }}"></script>
{% endblock javascript %}